// int computeXOR(int n)
// {
  
//   // If n is a multiple of 4
//   if (n % 4 == 0)
//     return n;

//   // If n%4 gives remainder 1
//   if (n % 4 == 1)
//     return 1;

//   // If n%4 gives remainder 2
//   if (n % 4 == 2)
//     return n + 1;

//   // If n%4 gives remainder 3
//   return 0;

#define Endl endl

// thala for a reason 

void solve(void){
    ll n; cin>>n;
    vll a(n),b(n); cin>>a>>b;
    vll diff(n); ll z = 0;
    for(int i = 0;i<n;++i){
        bool chk = false;
        if(a[i]==0){
            if(b[i]==0){
                z++;
            }
            else{
               continue;
            }
        }
        else {
        ll x = __gcd(a[i],b[i]);
        if(x != 1){
            a[i] /= x;
            b[i] /= x;
        }
        diff[i] = a[i] - b[i];
        }
    }
    map<ll,ll>mp;
    for(int i = 0;i<n;++i){
        if(a[i]==0||b[i]==0) continue;
        mp[diff[i]]++;
    }
    ll ans = 0;
    for(auto &i : mp){
        ans = max(ans,i.second);
    }
    cout<<ans+z<<endl;
}

int main(void)
{
    ios::sync_with_stdio(false); // For faster I/O
    cin.tie(NULL);
    cout.tie(NULL);
    //77
    ll tc; tc=1;
    while(tc--){
        solve();
    }
    return 0;
}
